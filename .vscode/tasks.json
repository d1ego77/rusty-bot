{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Ox-Bot Release",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--release"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run Ox-Bot Release",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--release"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },{
      "label": "Run Ox-Bot Release",
      "type": "shell",
      "command": "ravedude target/avr-atmega328p/release/ox-bot.elf",
      "dependsOn": "Build Ox-Bot Release",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}